{
    "name": "aghaeian/bagisto-pos-payment",
    "description": "POS Ödeme Yöntemi - Tüm bankalar için destek",
    "type": "bagisto-package",
    "require": {
        "php": "^8.1",
        "bagisto/bagisto": "^2.0 || ^2.1 || ^2.2"
    },
    "autoload": {
        "psr-4": {
            "Aghaeian\\POSPayment\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aghaeian\\POSPayment\\Providers\\POSPaymentServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan pospayment:install"
        ],
        "post-update-cmd": [
            "@php artisan pospayment:install"
        ]
    }
}
